<view>
  <!-- 导航栏 -->
  <ui-nav-bar slot="nav-bar" class="nav_bar" custom-style="{{ navBarStyle }}" _pid="{{_pid}}">
    <view class="ui-row" style="height:46px;">
      <view class="ui-col valign-middle" style="">
        <view class="ui-col-content valign-middle">
          <ui-tabs ink-bar="true" ink-bar-style="{{ inkBarStyle }}" tab-style="{{tabStyle}}" width="{{ WIN_WIDTH-130 }}" index="{{ current }}" bindchange="sgmChange" _pid="{{_pid}}">
            <ui-tab _pid="{{_pid}}">
              <view class="">展教联盟</view>
            </ui-tab>
            <ui-tab _pid="{{_pid}}">
              <view class="">特色场馆</view>
            </ui-tab>
            <ui-tab _pid="{{_pid}}">
              <view class="">科普大学</view>
            </ui-tab>
            <ui-tab _pid="{{_pid}}">
              <view class="">全部</view>
            </ui-tab>

          </ui-tabs>
        </view>
      </view>
    </view>
  </ui-nav-bar>

  <!--将页面起始点向下推移出导航栏，否则下面的内容会进入到达行栏中-->
  <view style="width:{{WIN_WIDTH}}px; height:{{NAV_HEIGHT}}"></view>
  <!-- <cover-image src={{floatButtonImgSrcArray[0]}} style="width:100rpx;height:100rpx;"/> -->

  <!-- 场馆卡片 / 场馆地图 / 切换按钮 -->
  <view class="container">
    <view wx:if="{{!flag}}">
      <view class="sites_cards" id="{{item.id}}" bindtap="switchToSiteDetails" wx:for="{{pois}}" wx:key="key" height="80" border-bottom hover-class="touchui-hover">
        <!-- <view class="site_card"> -->
        <view class="site_card_image">
          <image src="http://lorempixel.com/400/200" style="height:300rpx" />
        </view>

        <view class="ui-row" style="">
          <!-- <ui-col width="80" height="80" align="center" vertical-align="middle">
              <image src={{descriptionImageSrc}} style="height:160rpx"/>
            </ui-col> -->
          <view class="text ui-col ui-col-align-left align-left valign-middle" style="padding-left: 10px; padding-right: 10px;">
            <view class="ui-col-content align-left valign-middle">
              <view style="width: 100%;">
                <view class="ui-row" style="height:30px;">
                  <view style="font-size:36rpx; font-weight:bold;" class="ui-col ui-col-align-left align-left valign-middle">
                    <view class="ui-col-content align-left valign-middle">
                      <text>{{item.title}}</text>
                    </view>
                  </view>
                </view>
                <view>地址：{{item.address}} 类别：{{item.category}}</view>
              </view>
            </view>
          </view>
        </view>
      </view>
      <cover-view class="floatButton" bindtap="handleFloatButton">
        <cover-image class="floatImage" src="{{floatButtonImgSrcArray[0]}}" style="visibility:visible">
        </cover-image>
      </cover-view>
    </view>

    <view wx:elif="{{flag}}">
      <!-- subkey="5F4BZ-LUMLI-VKBGL-5EK4N-4FVDE-75BC4" -->
      <map id="sitesMap" bindmarkertap="switchToSiteDetails" markers="{{markers}}" scale="15" longitude="{{currLocation.longitude}}" latitude="{{currLocation.latitude}}" style="width:100%;height:{{CONTAINER_HEIGHT}}px;position:fixed;left:0;top:{{NAV_HEIGHT}}px">
      </map>
      <cover-view class="floatButton" bindtap="handleFloatButton">
        <cover-image class="floatImage" src="{{floatButtonImgSrcArray[1]}}" style="visibility:visible">
        </cover-image>
      </cover-view>
    </view>

    <!-- <cover-view class="floatButton" bindtap="handleFloatButton">
          <cover-image class="img" src={{floatButtonImgSrcArray[0]}} style="visibility:visible"/>
      </cover-view> -->
  </view>

</view>