<view>
  <!--导航栏-->
  <view class="nav_bar" style="height:{{NAV_HEIGHT*2}}rpx;">
    <view class="ui-row" style="height:{{STATUS_BAR_HEIGHT}}px;"></view>
    <!--用于占去状态栏的位置-->
    <view class="ui-row" style="height:{{DEFAULT_HEADER_HEIGHT}}px;">
      <view bindtap="navigateBack" class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 40px;">
        <view class="ui-col-content align-center valign-middle">
          <span type="arrow-left" size="16" color="#fff" class="ui-icon icon-arrow-left" style="color: #fff;font-size: 16px;"></span>
        </view>
      </view>
      <view style="color: #fff;padding-right: 40px;" class="ui-col ui-col-align-center align-center valign-middle">
        <view class="ui-col-content align-center valign-middle">
          资讯详情
        </view>
      </view>
    </view>
  </view>
  <!--将页面起始点向下推移出导航栏，否则下面的内容会进入到达行栏中-->
  <view style="width:{{WIN_WIDTH}}px; height:{{NAV_HEIGHT}}"></view>

  <view style="font-size: 20px; font-weight:bold; color: #313338; text-align:center; margin:20rpx; margin-top:40rpx;">
    {{news.title}}
  </view>
  <image src="{{news.newsImageSrc}}" style="width:670rpx; height:600rpx; display:block; margin:40rpx" />
  <text space="emsp" style="display:block; margin:40rpx"> {{news.content}}</text>
</view>